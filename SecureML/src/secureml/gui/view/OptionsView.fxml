<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane minHeight="330.0" minWidth="510.0" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="secureml.gui.view.OptionsViewController" xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10">
	<padding>
		<Insets top="25" right="25" bottom="10" left="25"/>
	</padding>
	
    <Label text="Server IP:"
        GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="serverIP"
        GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300.0"/>
 
    <Label text="Analyze Privately Port:"
        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="securePort"
        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
    <Label text="Analyze in the Clear Port:"
        GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="clearPort"
        GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        
    <Label text="Trusted Initializer IP:" 
        GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="tiIP"
        GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Label text="Trusted Initializer Port:"
        GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="tiPort"
        GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        
    <HBox spacing="10" alignment="bottom_right" 
        GridPane.columnIndex="1" GridPane.rowIndex="8">
        <Button text="OK" onAction="#okButtonPressed"/>
        <Button text="Cancel" onAction="#cancelButtonPressed"/>
	</HBox>
</GridPane>



